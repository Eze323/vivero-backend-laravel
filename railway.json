{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
    "buildCommand": "php artisan migrate --force && php artisan db:seed --force"
},
    "deploy": {
      "runtime": "V2",
      
      "numReplicas": 1,
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-east4-eqdc4a": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }